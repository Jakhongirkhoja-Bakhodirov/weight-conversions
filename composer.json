{
    "name": "bakhodirov/weight-conversions",
    "description": "Weight conversions app using php",
    "keywords": [
        "Jakhongirkhoja-Bakhodirov",
        "weight-conversions"
    ],
    "homepage": "https://github.com/Jakhongirkhoja-Bakhodirov/weight-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "Bakhodirov-Jakhongir",
            "email": "bahodirovjahongirxoja@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Bakhodirov\\WeightConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bakhodirov\\WeightConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor.bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "allow-plugins": {
            "sort-packages": true,
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
